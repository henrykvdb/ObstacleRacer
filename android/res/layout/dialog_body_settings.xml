<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_about_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:id="@+id/versionName_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_launcher"
        app:drawableLeftCompat="@drawable/ic_launcher"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingBottom="6dp"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="normal|bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/invert_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inverted_controls"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:paddingBottom="6dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/credit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="6dp"
            android:text="@string/credits"
            android:textSize="16sp"
            android:textStyle="normal|italic" />
    </LinearLayout>

</LinearLayout>